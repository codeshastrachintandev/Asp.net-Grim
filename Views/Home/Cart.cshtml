<section id="content-wrapper">

    <div class="page-title">
        <div>
            <h1>Cart</h1>
        </div>
        <div>
            <a href="./NewIndent"><button class="common-button common-flex-icon-btn common-blue-button"><span
                        class="material-symbols-rounded">add</span>ADD ITEM</button></a>
        </div>

    </div>

    <div class="container">
        <div class="filter-wrap">
            <div class="row">

                <div class="col-md-2">
                    <div class="form-group">
                        <select class="form-control" id="sel1" disabled name="sellist1">
                            <option value="" id="plant_name"></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <select class="form-control" id="sel2" name="sellist1"></select>
                        <span class="error-msg" id="cartdropbox1" style="display: none;">*The location field is
                            required.</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <select class="form-control" id="sel3" name="sellist1">
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <select class="form-control" id="sel4" name="sellist1">
                            <option value="0">Delivery Type*</option>
                            <option>Self Pickup</option>
                            <option>Store</option>
                        </select>
                        <span class="error-msg" id="cartdropbox2" style="display: none;">*The DeliveryType field is
                            required..</span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="">
                        <input type="checkbox" id="urgent-indent" name="Urgent Indent" value="1">
                        <label for="Urgent Indent">Urgent Indent</label>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <div class="container-fluid">
        <div id="tableid">
            <form id="formId">
                <div class="product-cart-wrapp table-responsive">
                    <table class="table table-striped" id="example">
                        <thead>
                            <tr>
                                <th>SI No</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Delivery Date</th>
                                <th>Delivery Priority</th>
                                <th>Delivery Days</th>
                                <th>Tracking Plant</th>
                                <th>Where in Plant</th>
                                <th>Reason</th>
                                <th>Where Used</th>
                                <th>Quantity Check By</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody id="tbody">
                        </tbody>

                    </table>

                </div><br>
                <div class="cart-buttons-wrap">

                    <button class="common-button common-blue-button common-flex-icon-btn" onclick="window.print();return false;"><span
                            class="material-symbols-rounded">print</span> PREVIEW INDENT</button>

                    <button class="common-button common-orange-button" onclick="clearcart()">CLEAR</button>

                    <button type="submit" class="common-button common-yellow-button" onclick="Pordectorder()">PLACE
                        INDENT</button>

                </div>
            </form>
        </div>
        <br>
        <div id="showmsg"></div>
    </div>
</section>
<br><br>


<div class="spinnerbody" id="spinnerbody">
    <div class="spinnerchild">
        <div class="spinner-border text-success " role="status">
            <span class="sr-only"></span>
        </div>
        <span>Loading....</span>
    </div>
</div>
